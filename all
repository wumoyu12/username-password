GetInfo.py
import os.path
from os import path
from flask import Flask, render_template, request

global filename;
filename="LoginAccounts.doc"

app=Flask(__name__)

@app.route("/")

def main():
    return render_template('AskInfo.html')

@app.route('/info', methods=["POST"])
def GetInfo():
    global username,userpassword;
    username=request.form.get('txtusername')
    userpassword=request.form.get('txtpassword')
    
    if (username=="" or userpassword==""):
        return render_template('AskInfo.html')
    else:
        CreateCheckFile()
        
        GetFileInfo()
        return render_template('Output.html', username=username, password=userpassword)

def CreateCheckFile():
    fileDir = os.path.dirname(os.path.realpath("__file__"))
    fileexist = bool(path.exists(filename))

    if (fileexist == True):
        status="new"
    else:
        status="edit"

    WriteToFile(status)

def WriteToFile(whichstatus):
    if (whichstatus == "new"):
        pythfile = open(filename, "x")
        pythfile.close()
        pythfile = open(filename, "w")
    else:
        pythfile = open(filename, "a")
    
    pythfile.write(username + "," + userpassword + ",")

def GetFileInfo():
    global fusername, fuserpassword
    fileinfo=open(filename, "r")
    userinfo=fileinfo.read().split(",")
    fileinfo.close();

    fusername=userinfo[0].strip();
    fuserpassword=userinfo[1].strip();

if __name__ == "__main__":
    app.run()

GetInfo.js
window.addEventListener("load", InitControls);
window.addEventListener("load", addListener);

function InitControls()
{
	document.getElementById("txtusername").textContent="";
	document.getElementById("txtpassword").textContent="";
	document.getElementById("txtusername").focus();
}

function addListener()
{
	document.getElementById("btnsubmit").addEventListener("click", CheckInfo);
}

function CheckInfo()
{
	var username, passwd;
	username=document.getElementById("txtusername").value
	passwd=document.getElementById("txtpassword").value

	if (username=="" || passwd=="")
	{
		alert("Information is missing!");
		InitControls();
	}
}

AskInfo.html
<html>
	<head>
		<title>Collect Information</title>
		<link rel="stylesheet" href="\static\AskInfo.css">
		<script src="\static\GetInfo.js"></script>
	</head>

	<body>
		<h1>Input the following information</h1>
		<form action="/info" method="post">
			<div id="login">
				<table id="tbllogin">
					<tr>
						<td><label id="lblusername">User Name:</label>
						<td><input type="text" id="txtusername" name="txtusername" ></input>
					</tr>
					<tr>
						<td><label id="lblpassword">Password:</label>
						<td><input type="text" id="txtpassword" name="txtusername" ></input>
					</tr>
					<tr>
						<td><button id="btnsubmit">Submit</button>
					</tr>
				</table>
			<div>				
		</form>
	</body>
</html>

AskInfo.css
table, th, td
{
	border:1px solid black;
	border-collapse:collapse;
}

label
{
	display:inline-block;
	width:70px;
}

